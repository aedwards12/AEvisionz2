 $( ".box" ).removeClass( "col2" ).addClass( "col3" );

 var $container = $('#masonry-container').isotope({
  itemSelector: '.box',
  masonry: {
    columnWidth: 5,
    gutter: 5,
    isFitWidth: true
  }
});

