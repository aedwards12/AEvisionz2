<h1 class="color">New photo</h1>
 <div class="shoot-form ">
<%= form_for @photo do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'color' %>
    <%= f.text_field :title, class: 'form-control', required: true %>
    <%= f.label :category, class: 'color'  %>
    <%= f.text_field :category, class: 'form-control', required: true %>
    <%= f.label :model, class: 'color'  %>
    <%= f.text_field :model, class: 'form-control', required: true %>
    <%= f.label :shootdate, class: 'color'  %>
    <%= f.date_field :shootdate, required: true %>
  </div>
 
  <div class="form-group">
    <%= f.label :image, class: 'color'  %>
    <%= f.file_field :image, required: true %>
  </div>
 
  <%= f.submit 'Submit', class: 'btn btn-primary btn-lg' %>
<% end %>
</div>
