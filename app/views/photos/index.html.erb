<section class="row ">
  <div id="masonry-container" class="small-12 columns transitions-enabled large-centered clearfix photos-list isotope">
    <% @photos.each do |photo| %>
      <div class="box col2 <%=photo.category%>" data-category="<%=photo.category%>"  >
       <%= link_to image_tag(photo.image.thumb('400x200#').url(name: photo.image_uid), alt: photo.title,  class:'images', id: :"#openModal", :"data-id" => photo.image_uid, :"data-reveal-id" => "pictureModal"  ),
                    'http://d3qsxujqwcvsf0.cloudfront.net'+photo.image_uid, target: '_blank' %>
        <!-- <p><%= photo.image.url%></p> -->
      </div>
    <% end %>
  </div>
</section>

<div id="pictureModal" class="reveal-modal small override_modal" data-reveal>
  <a class="close-reveal-modal">&#215;</a>
</div>
<footer class="row">
</footer>


