<script>
    var $containter = $('#masonry-container');
    $containter.imagesLoaded( function(){
        $containter.masonry({
          itemSelector: '.box',
          isAnimated: !Modernizr.csstransitions,
          isFitWidth: true
     });  
});
</script>

